# Порт для запуска сервера
PORT=5001

# URI для подключения к MongoDB
MONGODB_URI=mongodb://localhost:27017/rabinskiy-sklad

# Секретный ключ для JWT
JWT_SECRET=rabinskiy_sklad_secret_key_2023

# Время жизни токена (в часах)
