# Порт сервера (Render предоставляет порт через переменную PORT)
PORT=10000

# MongoDB URI для подключения к базе данных
# Для Render используем встроенную MongoDB
MONGODB_URI=mongodb://localhost:27017/rabinskiy-sklad

# Секретный ключ для JWT (будет заменен через переменные окружения Render)
JWT_SECRET=your-secret-key-for-production

# Время жизни токена (в часах)
JWT_EXPIRES_IN=24

# Данные для подключения к MoySklad API
MOYSKLAD_LOGIN=demo
MOYSKLAD_PASSWORD=demo
MOYSKLAD_API_URL=https://api.moysklad.ru/api/remap/1.2

# Режим работы приложения
NODE_ENV=production

# Инициализация базы данных при первом запуске
# Установите в true для первого запуска, затем в false
INIT_DB=false 